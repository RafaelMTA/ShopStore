@model DAL.Models.ProductPromotion

<div class="card" style="width: 18rem;">
    <div class="bg-image hover-zoom">
        <img src="@Model.Product.ImageURL"
             class="card-img-top w-100"
             style="width: 100%; height: 50vh;"
             alt="...">
    </div>
    <hr />
    <div class="card-body">
        <h5 class="card-title" style="border-bottom: 1px solid black;">@Model.Product.Name</h5>
        <div class="d-flex flex-column">
            @if (Model.Product.Price >= Model.FinalPrice)
            {
                <div class="d-flex flex-row justify-content-around">
                    <p class="card-text text-decoration-line-through text-danger">@Html.DisplayFor(model => model!.Product.Price, new { @class = "card-text text-decoration-line-through"})</p>
                    @Html.DisplayFor(model => model!.FinalPrice)
                </div>
            }
            else
            {
                @Html.DisplayFor(model => model!.Product!.Price)
            }
            <a asp-controller="Product" asp-action="AddItemToCart" asp-route-id="@Model.Product.Id" class="btn btn-success">Add Item</a>
        </div>
    </div>
</div>
