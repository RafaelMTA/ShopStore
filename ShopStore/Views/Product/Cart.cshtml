@using DAL.Models;

@model IEnumerable<Cart>

@{
    ViewData["Title"] = "Promotions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <table class="table table-bordered table-striped" id="datatable">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Product.ImageURL)</th>
                <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Product.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Product.Price)</th>
                <th>@Html.DisplayNameFor(model => model.Product.Category)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.Product.ImageURL" style="width: 60px; height: 60px;" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Category.Name)
                        </td>
                        <td>
                            <div class="d-flex justify-content-between">
                                <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-danger">Remove</a>
                            </div>
                        </td>
                    </tr>
                }
            }        
        </tbody>
    </table>
    <a asp-action="CheckOut" class="btn btn-secondary">Buy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_DataTable");
    }
}